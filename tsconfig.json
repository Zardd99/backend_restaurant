{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express", "jsonwebtoken"],
    "target": "ES2017",
    "lib": ["ES2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts",
    "scripts/insertMenuItem.ts",
    "server/index.ts",
    "server.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
