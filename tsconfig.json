{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express", "jsonwebtoken"],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/scripts/insertMenuItem.ts",
    "app/server/index.ts",
    "app/middleware/websocketNotifier.ts",
    "app/server.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
